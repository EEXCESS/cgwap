<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>de</supported-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>cgwap.util.i18n.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<factory>
		<exception-handler-factory>
			cgwap.util.exception_handler.CGWAPExceptionHandlerFactory</exception-handler-factory>
	</factory>

	<converter>
		<converter-for-class>java.lang.Enum</converter-for-class>
		<converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>

	<lifecycle>
		<phase-listener>cgwap.util.MultiPageMessagesSupport</phase-listener>
	</lifecycle>

	<navigation-rule>
		<navigation-case>
			<from-action>#{userAction.logout()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/public/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/public/register.xhtml</to-view-id>
			<redirect />
		</navigation-case>

		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>about</from-outcome>
			<to-view-id>/public/about.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>help</from-outcome>
			<to-view-id>/public/help.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>asking</from-outcome>
			<to-view-id>/public/asking.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>answering</from-outcome>
			<to-view-id>/public/answering.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>userProfile</from-outcome>
			<to-view-id>/members/userProfile.html</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/members/userProfile.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userAction.deleteAccount}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/userProfile.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.deleteAccount}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.resetPassword}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/userProfile.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.resetPassword}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/userProfile.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.initQuestion(question.id)}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.removeQuestion(question)}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/userProfile.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.removeQuestion(question)}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/userProfile.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/members/changeQuestion.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{questionAction.updateQuestion(newQuestionText.value)}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.addAnswerUrl(newAnswerUrl.value)}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.addAnswerUrl(newAnswerUrl.value)}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.removeAnswer(answer)}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.removeAnswer(answer)}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.addTag(newTag.value)}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.addTag(newTag.value)}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.removeTag(questionTags)}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{questionAction.removeTag(questionTags)}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/changeQuestion.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{questionAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/public/asking.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{askingAction.store('noFollowUps')}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/question.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{askingAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{askingAction.store('hasFollowUps')}</from-action>
			<from-outcome>hasFollowUps</from-outcome>
			<to-view-id>/members/askingFollowUp.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{askingAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{askingAction.storeFollowers('hasFollowUps')}</from-action>
			<from-outcome>hasFollowUps</from-outcome>
			<to-view-id>/members/askingFollowUp.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{askingAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{askingAction.storeFollowers('noFollowUps')}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/question.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{askingAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>members/askingFollowUp.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{askingAction.storeFollowers('hasFollowUps')}</from-action>
			<from-outcome>hasFollowUps</from-outcome>
			<to-view-id>/members/askingFollowUp.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{askingAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{askingAction.storeFollowers('noFollowUps')}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/question.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>questionId</name>
					<value>#{askingAction.question.id}</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/members/changeUserData.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userAction.resetPassword}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/changeUserData.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.resetPassword}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/changeUserData.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.update()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/changeUserData.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.update()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/userProfile.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.updateAccountChange()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/members/changeUserData.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.updateAccountChange()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/members/userProfile.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>



	<navigation-rule>
		<from-view-id>/public/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userAction.login()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/public/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.login()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.login()}</from-action>
			<from-outcome>manager</from-outcome>
			<to-view-id>/party-management/partyListControl.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.resetPassword()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/public/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.resetPassword()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/public/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.register()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/public/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.register()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/public/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/public/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userAction.register()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/public/register.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userAction.register()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/public/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>